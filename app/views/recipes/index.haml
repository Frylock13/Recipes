.recipes-index
  %h1.text-center All recipes

  .recipes-list.container
    - @recipes.each do |recipe|
      - cache recipe do
        .recipe.col-md-12
          .chef-avatar.col-md-2
            .avatar
              = image_tag recipe.chef.avatar.url(:thumb)
            = link_to recipe.chef.name, root_path

          .info.col-md-10
            %h2
              = link_to recipe.name, recipe_path(recipe.id)
            %p
              = recipe.summary
            %span
              = "Posted: #{time_ago_in_words(recipe.created_at)} ago"

            %div
              = link_to 'Show', recipe_path(recipe.id), class: 'btn btn-info'